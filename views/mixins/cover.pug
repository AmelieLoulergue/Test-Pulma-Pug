mixin cover(item, type)
    .box.custo-is-fullwidth
        .columns 
            .column.is-4
                img(src=item.mea)
            .column.is-4
                p.text= item.tag
                p.is-size-2.mb-3= item.title
                p.text= item.price
                p.text= item.mention
            .column.is-4
                a.button(href=item.cta.href)= item.cta.txt